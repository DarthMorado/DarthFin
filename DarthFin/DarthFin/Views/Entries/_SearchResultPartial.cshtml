@model EntriesListModel

<form id="entriesForm">
    <table class="table-hover">
        <tr>
            <th>Date</th>
            <th>Receiver</th>
            <th>Comment</th>
            <th>Category</th>
            <th>Amount</th>
        </tr>
        @foreach (var entry in Model.Entries)
        {
            <tr>
                <td class="border">@((entry.RealDate ?? entry.EntryDate).Value.ToShortDateString())</td>
                <td class="border">@entry.Correspondent</td>
                <td class="border">@entry.Information</td>
                @if (entry.CategoryId.HasValue)
                {
                    <td class="border">@entry?.Category?.Name</td>
                }
                else
                {
                    <td class="border">
                        <button type="button"
                                class="btn btn-info btn-new-filter"
                        @*   data-bs-toggle="modal"
                            data-bs-target="#filterModal" *@
                                data-id="@entry.Id">
                            New filter
                        </button>
                    </td>
                }

                <td class="border">@entry.Amount</td>
            </tr>
        }

    </table>
</form>

<div class="modal fade" id="filterModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Filter</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>


            <div class="modal-body" id="modalBody">
                <!-- modal content -->
                Filter form goes here
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button id="btn-new-filter-save" type="button" class="btn btn-primary">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>