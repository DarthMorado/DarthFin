@model CategoriesListModel

@if (Model?.Categories != null && Model.Categories.Any())
{
    <div>
        @foreach(var category in Model.Categories)
        {
            <div class="input-group ">
              <span class="input-group-text" id="basic-addon1">@category.Id</span>
                <input type="text" class="form-control" placeholder="Category name" aria-label="Name" aria-describedby="basic-addon1" value="@category.Name" />
                <select class="form-select color-select" id="inputGroupSelect01">
                    <option selected>Choose...</option>
                    <option value="EB3324">Red</option>
                    <option value="377E47">Green</option>
                    <option class="bg-blue" value="0d6efd">Blue</option>
                    <option value="A661AD">Purple</option>
                    <option value="EDEA33">Yellow</option>
                    <option value="6CFDFF">Aqua</option>
                    @* $blue:    #0d6efd;
                    $indigo:  #6610f2;
                    $purple:  #6f42c1;
                    $pink:    #d63384;
                    $red:     #dc3545;
                    $orange:  #fd7e14;
                    $yellow:  #ffc107;
                    $green:   #198754;
                    $teal:    #20c997;
                    $cyan:    #0dcaf0; *@
                </select>
                <button type="button" class="btn btn-outline-secondary">
                    Filters <span class="badge text-black">4</span>
                </button>
                <button class="btn btn-outline-secondary" type="button">Delete</button>
            </div>
        }
        <div class="input-group ">
            <span class="input-group-text" id="basic-addon1">+</span>
        </div>
    </div>
}

