@using DarthFin.Models.Graph
@using System.Text.Json

@model BarGraphModel

<div>
    <p>@Model.Name</p>
</div>

<div>
    <canvas id="graphChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@{
    //var palette = new[] { "#4e79a7", "#f28e2b", "#e15759", "#76b7b2", "#59a14f", "#edc948" };
    var ds = (Model.Categories ?? new List<GraphValues>())
        .Select((c, i) => new
        {
            label = c.Name,
            data = c.Values ?? new List<double>(),
            backgroundColor = c.Color
        });
    var dsJson = JsonSerializer.Serialize(ds);
}

<script>
    const ctx = document.getElementById('graphChart');

    var labels = @Html.Raw(JsonSerializer.Serialize(Model.Headers));
    var datasets = @Html.Raw(dsJson);

    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: labels,
        datasets: datasets
      },
      options: {
        responsive: true,
        scales: {
          x: { stacked: true },
          y: { stacked: true, beginAtZero: true }
        },
        plugins: {
          tooltip: { mode: 'index', intersect: false },
          legend: { position: 'top' }
        }
      }
    });
</script>